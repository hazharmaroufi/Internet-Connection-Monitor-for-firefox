{
  "manifest_version": 2,
  "name": "Internet Connection Monitor",
  "version": "1.0",
  "description": "Monitor the internet connection and display status in the toolbar.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Internet Connection Monitor"
  },
  "permissions": [
    "alarms",
    "notifications",
    "<all_urls>"
  ]
}